<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.apache.dolphinscheduler.dao.mapper.CommandPushWaitingMapper">
    <select id="queryCommandPage" resultType="org.apache.dolphinscheduler.dao.entity.CommandPushWaiting">
        select *
        from t_ds_command_push_waiting
        limit #{limit} offset #{offset}
    </select>
    
    <select id="queryWaitingCommand" resultType="org.apache.dolphinscheduler.dao.entity.CommandPushWaiting">
		SELECT DISTINCT command_push_id, process_definition_code,dep_data_time 
		from t_ds_command_push_waiting 
		where handled_flag = 0 
			  and (process_definition_code,dep_data_time) not in (
							select process_definition_code,dep_data_time 
							from t_ds_command_push_waiting 
							where handled_flag=0 and receive_flag=0)
    </select>
    
    <update id="updateHandledFlagByProcessDefinitionCodeAndDataTime">
        update t_ds_command_push_waiting
        set handled_flag = 1
        where process_definition_code = #{processDefinitionCode} and dep_data_time = #{depDataTime}
    </update>
    
    <update id="updateCommandPushWaitingReceiveFlagByDataNameAndDataTime">
        update t_ds_command_push_waiting 
        set receive_flag = 1 
        where dep_data_name=#{depDataName} and dep_data_time=#{depDataTime}
        
    </update>
    
    
</mapper>
